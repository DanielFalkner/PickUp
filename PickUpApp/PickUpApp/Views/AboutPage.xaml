<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="PickUpApp.Views.AboutPage"  
             BackgroundColor="LightCyan">

    <ContentPage.Content>
        <StackLayout Spacing="3" Padding="15">
            <Label Text="HOMEPAGE" FontSize="Large"/>
            <Label Text="Du befindest dich nun auf der Homepage" FontSize="Medium" />
            <StackLayout Orientation="Vertical">
                <Button Text="Lieferübersicht" Command="{Binding CancelCommand}" BackgroundColor="CadetBlue" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Bestellübersicht" Command="{Binding SaveCommand}" BackgroundColor="CadetBlue" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="QR Code" Command="{Binding SaveCommand}" BackgroundColor="CadetBlue" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Status" Command="{Binding SaveCommand}" BackgroundColor="CadetBlue" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Behälter retounieren" Clicked="OnReturnButtonClicked" BackgroundColor="CadetBlue" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>